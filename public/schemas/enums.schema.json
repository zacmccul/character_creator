{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://character-creator/schemas/enums.json",
  "title": "Enums Configuration",
  "description": "Configuration for dropdown/enum options throughout the application",
  "type": "object",
  "required": ["enums"],
  "properties": {
    "enums": {
      "type": "array",
      "description": "List of enum definitions",
      "items": {
        "$ref": "#/definitions/enum"
      },
      "minItems": 1
    }
  },
  "definitions": {
    "enum": {
      "type": "object",
      "required": ["id", "label", "values"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the enum (e.g., 'species', 'classes')",
          "minLength": 1,
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "label": {
          "type": "string",
          "description": "Human-readable name for the enum",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "Optional description of what this enum represents"
        },
        "values": {
          "type": "array",
          "description": "List of possible values for this enum (strings or objects with name/desc)",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "desc": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    }
  }
}
