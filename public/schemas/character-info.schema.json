{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://character-creator/schemas/character-info.json",
  "title": "Character Info Configuration",
  "description": "Configuration for character information fields",
  "type": "object",
  "required": ["title", "fields"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Section title displayed in the UI",
      "minLength": 1
    },
    "fields": {
      "type": "array",
      "description": "List of character information fields",
      "items": {
        "oneOf": [
          {
            "$ref": "#/definitions/textField"
          },
          {
            "$ref": "#/definitions/enumField"
          }
        ]
      }
    }
  },
  "definitions": {
    "baseField": {
      "type": "object",
      "required": ["id", "type", "label"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the field",
          "minLength": 1,
          "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
        },
        "label": {
          "type": "string",
          "description": "Display label for the field",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "description": "Optional tooltip description"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this field is required",
          "default": false
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text for the input"
        }
      }
    },
    "textField": {
      "allOf": [
        {
          "$ref": "#/definitions/baseField"
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "const": "text"
            },
            "defaultValue": {
              "type": "string",
              "description": "Default value for the text field"
            }
          }
        }
      ]
    },
    "enumField": {
      "allOf": [
        {
          "$ref": "#/definitions/baseField"
        },
        {
          "type": "object",
          "required": ["type", "enumRef"],
          "properties": {
            "type": {
              "type": "string",
              "const": "enum"
            },
            "enumRef": {
              "type": "object",
              "required": ["enumId"],
              "properties": {
                "enumId": {
                  "type": "string",
                  "description": "Reference to an enum ID defined in enums.json",
                  "minLength": 1
                }
              },
              "additionalProperties": false
            },
            "defaultValue": {
              "type": "string",
              "description": "Default selected value from the enum"
            }
          }
        }
      ]
    }
  }
}
