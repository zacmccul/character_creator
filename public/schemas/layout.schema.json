{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://character-creator/schemas/layout.json",
  "title": "Layout Configuration",
  "description": "Configuration for the character sheet layout and component arrangement",
  "type": "object",
  "required": ["version", "name", "items"],
  "anyOf": [
    { "required": ["columns"] },
    { "required": ["grid"] }
  ],
  "properties": {
    "version": {
      "type": "string",
      "description": "Layout configuration version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "name": {
      "type": "string",
      "description": "Name of the layout",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the layout"
    },
    "columns": {
      "type": "array",
      "description": "Column definitions for the layout",
      "items": {
        "$ref": "#/definitions/column"
      },
      "minItems": 1
    },
    "columnGap": {
      "type": "number",
      "description": "Gap between columns in Chakra UI spacing units",
      "minimum": 0,
      "default": 4
    },
    "itemGap": {
      "type": "number",
      "description": "Gap between items within a column in Chakra UI spacing units",
      "minimum": 0,
      "default": 4
    },
    "items": {
      "type": "array",
      "description": "Component items to render in the layout",
      "items": {
        "$ref": "#/definitions/layoutItem"
      },
      "minItems": 1
    },
    "container": {
      "$ref": "#/definitions/containerConfig"
    },
    "grid": {
      "type": "object",
      "description": "Grid layout configuration for responsive grid-based layouts",
      "properties": {
        "templateColumns": {
          "oneOf": [
            { "type": "string" },
            { "type": "object" }
          ]
        },
        "columns": {
          "oneOf": [
            { "type": "integer", "minimum": 1 },
            {
              "type": "object",
              "properties": {
                "base": { "type": "integer", "minimum": 1 },
                "sm": { "type": "integer", "minimum": 1 },
                "md": { "type": "integer", "minimum": 1 },
                "lg": { "type": "integer", "minimum": 1 },
                "xl": { "type": "integer", "minimum": 1 }
              },
              "additionalProperties": false
            }
          ],
          "description": "Number of grid columns or responsive column counts"
        },
        "gap": { "type": "number", "minimum": 0 },
        "templateRows": { "type": "string" },
        "minChildWidth": {
          "oneOf": [
            { "type": "string" },
            {
              "type": "object",
              "properties": {
                "base": { "type": "string" },
                "sm": { "type": "string" },
                "md": { "type": "string" },
                "lg": { "type": "string" },
                "xl": { "type": "string" }
              },
              "additionalProperties": false
            }
          ]
        },
        "autoFlow": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "column": {
      "type": "object",
      "properties": {
        "width": {
          "oneOf": [
            {
              "type": "string",
              "description": "Fixed width (e.g., '300px', '1fr')"
            },
            {
              "type": "object",
              "description": "Responsive width values",
              "properties": {
                "base": {
                  "type": "string"
                },
                "sm": {
                  "type": "string"
                },
                "md": {
                  "type": "string"
                },
                "lg": {
                  "type": "string"
                },
                "xl": {
                  "type": "string"
                },
                "2xl": {
                  "type": "string"
                }
              }
            }
          ]
        },
        "label": {
          "type": "string",
          "description": "Descriptive label for the column (for documentation)"
        }
      },
      "additionalProperties": false
    },
    "layoutItem": {
      "type": "object",
      "required": ["componentId"],
      "properties": {
        "componentId": {
          "type": "string",
          "enum": [
            "character-info",
            "attributes",
            "combat-stats",
            "level-class",
            "resource-counters",
            "inventory"
          ],
          "description": "ID of the component to render"
        },
        "column": {
          "type": "integer",
          "description": "Column index (0-based) where this component should be placed (for column-type layouts)",
          "minimum": 0
        },
        "colStart": {
          "oneOf": [
            { "type": "integer", "minimum": 0 },
            {
              "type": "object",
              "properties": {
                "base": { "type": "integer", "minimum": 0 },
                "sm": { "type": "integer", "minimum": 0 },
                "md": { "type": "integer", "minimum": 0 },
                "lg": { "type": "integer", "minimum": 0 },
                "xl": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            }
          ]
        },
        "rowStart": {
          "oneOf": [
            { "type": "integer", "minimum": 0 },
            {
              "type": "object",
              "properties": {
                "base": { "type": "integer", "minimum": 0 },
                "sm": { "type": "integer", "minimum": 0 },
                "md": { "type": "integer", "minimum": 0 },
                "lg": { "type": "integer", "minimum": 0 },
                "xl": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false
            }
          ]
        },
        "colSpan": {
          "oneOf": [
            { "type": "integer", "minimum": 1 },
            {
              "type": "object",
              "properties": {
                "base": { "type": "integer", "minimum": 1 },
                "sm": { "type": "integer", "minimum": 1 },
                "md": { "type": "integer", "minimum": 1 },
                "lg": { "type": "integer", "minimum": 1 },
                "xl": { "type": "integer", "minimum": 1 }
              },
              "additionalProperties": false
            }
          ]
        },
        "minH": {
          "type": "string",
          "description": "Minimum height for the component (e.g., '200px', 'auto')",
          "default": "auto"
        },
        "display": {
          "type": "string",
          "description": "CSS display property",
          "default": "block"
        },
        "className": {
          "type": "string",
          "description": "Optional CSS class name"
        }
      },
      "additionalProperties": false
    },
    "containerConfig": {
      "type": "object",
      "properties": {
        "maxW": {
          "type": "string",
          "description": "Maximum width of the container (e.g., 'container.xl', '1200px')",
          "default": "container.xl"
        },
        "px": {
          "oneOf": [
            { "type": "number" },
            {
              "type": "object",
              "properties": {
                "base": { "type": "number", "minimum": 0 },
                "sm": { "type": "number", "minimum": 0 },
                "md": { "type": "number", "minimum": 0 },
                "lg": { "type": "number", "minimum": 0 },
                "xl": { "type": "number", "minimum": 0 }
              },
              "additionalProperties": false
            }
          ],
          "description": "Horizontal padding in Chakra UI spacing units",
          "default": 4
        },
        "py": {
          "oneOf": [
            { "type": "number" },
            {
              "type": "object",
              "properties": {
                "base": { "type": "number", "minimum": 0 },
                "sm": { "type": "number", "minimum": 0 },
                "md": { "type": "number", "minimum": 0 },
                "lg": { "type": "number", "minimum": 0 },
                "xl": { "type": "number", "minimum": 0 }
              },
              "additionalProperties": false
            }
          ],
          "description": "Vertical padding in Chakra UI spacing units",
          "default": 4
        }
      },
      "additionalProperties": false
    }
  }
}
