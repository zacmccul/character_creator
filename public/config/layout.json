{
  "$schema": "../schemas/layout.schema.json",
  "version": "1.0.0",
  "name": "Default Two-Column Layout",
  "description": "Traditional two-column layout with attributes on the left and main content on the right. Layout uses columns (0-indexed) with VStack for vertical stacking within each column.",
  "columns": [
    {
      "width": { "base": "1fr", "lg": "400px", "xl": "450px" },
      "label": "Left Column - Attributes & Counters"
    },
    {
      "width": { "base": "1fr", "lg": "1fr" },
      "label": "Right Column - Main Content"
    }
  ],
  "columnGap": 6,
  "itemGap": 4,
  "items": [
    {
      "componentId": "attributes",
      "column": 0,
      "minH": "200px"
    },
    {
      "componentId": "resource-counters",
      "column": 0,
      "minH": "150px"
    },
    {
      "componentId": "character-info",
      "column": 1,
      "minH": "auto"
    },
    {
      "componentId": "combat-stats",
      "column": 1,
      "minH": "auto"
    },
    {
      "componentId": "level-class",
      "column": 1,
      "minH": "auto"
    },
    {
      "componentId": "inventory",
      "column": 1,
      "minH": "200px"
    }
  ],
  "container": {
    "maxW": "container.xl",
    "px": 4,
    "py": { "base": 6, "sm": 8 }
  }
}
