{
  "version": "1.0.0",
  "name": "Grid Dashboard Layout",
  "description": "Card-based dashboard with auto-fit grid, perfect for tablets",
  "grid": {
    "minChildWidth": {
      "base": "250px",
      "md": "300px",
      "lg": "350px"
    },
    "gap": 6,
    "autoFlow": "dense"
  },
  "items": [
    {
      "componentId": "character-info",
      "colSpan": {
        "base": 1,
        "md": 2
      }
    },
    {
      "componentId": "attributes"
    },
    {
      "componentId": "combat-stats"
    },
    {
      "componentId": "level-class"
    },
    {
      "componentId": "resource-counters"
    },
    {
      "componentId": "inventory",
      "colSpan": {
        "base": 1,
        "lg": 2
      }
    }
  ],
  "container": {
    "maxW": "container.xl",
    "px": 4,
    "py": 6
  }
}
